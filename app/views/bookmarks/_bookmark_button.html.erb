<!-- app/views/bookmarks/_bookmark_button.html.erb -->
<% if current_user.bookmark?(keyboard) %>
  <%= link_to bookmark_path(current_user.bookmarks.find_by(keyboard_id: keyboard.id)), data: { turbo_method: :delete }, id: "unbookmark-#{ keyboard.id }", remote: true do %>
    <i class="fa-solid fa-heart fa-2xl" style="color:red;"></i>
  <% end %>
<% else %>
  <%= link_to bookmarks_path(keyboard_id: keyboard.id), data: { turbo_method: :post }, id: "bookmark-#{ keyboard.id }", remote: true do %>
    <i class="fa-regular fa-heart fa-2xl" style="color:red;"></i>
  <% end %>
<% end %>
