<% if current_user.bookmark?(keyboard) %>
  <%= link_to bookmark_path(current_user.bookmarks.find_by(keyboard_id: keyboard.id)), data: { turbo_method: :delete }, remote: true, id: "unbookmark-#{keyboard.id}" do %>
    <i class="fa-solid fa-heart fa-2xl" style="color:red;"></i>
  <% end %>
<% else %>
  <%= link_to bookmarks_path(keyboard_id: keyboard.id), data: { turbo_method: :post}, remote: true, id: "bookmark-#{keyboard.id}" do %>
    <i class="fa-regular fa-heart fa-2xl" style="color:red;"></i>
  <% end %>
<% end %>
