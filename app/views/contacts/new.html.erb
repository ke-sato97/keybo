<!-- app/views/contacts/new.html.erb -->
<% content_for(:title, t('.title')) %>
<div class='overflow-scroll top-wrapper'>
  <div class="p-6 mx-auto my-auto mt-6 mb-6 bg-white rounded-lg shadow-lg max-w-screen-lg">
    <div class="flex justify-center mb-4 text-4xl font-bold text-slate-600">
      <%= (t '.title') %>
    </div>
    <%= form_with model: @contact, url: confirm_contacts_path, data: { turbo: false }, local: true do |f| %>
      <div class="mb-3 form-group">
        <%= f.label :name, Contact.human_attribute_name(:name), class:"text-lg pb-2" %>
        <%= f.text_field :name, class:"w-full rounded-lg border border-slate-700", placeholder: "例: キー坊 太郎", required: true, autofocus: true %>
      <div class="mt-3 mb-3 form-group">
        <%= f.label :email, Contact.human_attribute_name(:email), class:"text-lg pb-2" %>
        <%= f.email_field :email, class:"w-full rounded-lg border border-slate-700", placeholder: "例: keybo@example.com", required: true, autofocus: true %>
      </div>
      <div class="mb-3 form-group">
        <%= f.label :subject, Contact.human_attribute_name(:subject), class:"text-lg pb-2" %>
        <%= f.text_field :subject, class:"w-full rounded-lg border border-slate-700", placeholder: "件名を記載してください", required: true, autofocus: true %>
      </div>
      <div class="mb-4 form-group">
        <%= f.label :message, Contact.human_attribute_name(:message), class:"text-lg pb-2" %>
        <%= f.text_area :message, class:"w-full rounded-lg border border-slate-700 p-2", placeholder: "内容を記載してください", rows: '5', required: true, autofocus: true %>
      </div>
      <div class="flex justify-center">
        <%= f.submit t('.submit'), class: 'text-lg border-2 border-red-500 rounded-lg text-red-500 shadow-lg hover:bg-red-500 hover:text-white text-center py-1 px-3 hover:border-transparent rounded' %>
      </div>
    <% end %>
  </div>
</div>
