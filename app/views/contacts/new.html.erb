<%= form_with model: @contact, url: confirm_contacts_path, data: { turbo: false }, local: true do |f| %>
  <%= f.label :name, 'お名前' %><br>
  <%= f.text_field :name %>
  <br>
  <%= f.label :email, 'メールアドレス' %><br>
  <%= f.email_field :email %>
  <br>
  <%= f.label :subject, '件名' %><br>
  <%= f.text_area :subject %>
  <br>
  <%= f.label :message, 'メッセージ' %><br>
  <%= f.text_area :message, rows: '5' %>
  <br>
    <%= f.submit '入力内容確認', class: 'text-white bg-red-500 hover:bg-red-600 px-4 py-2' %>
<% end %>
