<!-- app/views/contacts/confirm.html.erb -->
<div class='relative overflow-scroll top-wrapper'>
  <div class="pt-6 pb-6">
    <div class="p-6 mx-auto bg-white rounded-lg shadow-lg max-w-screen-lg">
      <div class="flex justify-center mb-4 text-4xl font-bold text-slate-600">
        入力内容確認
      </div>

      <div class="text-lg">名前 : <span><%= @contact.name %></span></div>
      <div class="mt-3 mb-3 border-b border-gray-600"></div>

      <div class="text-lg">メールアドレス : <span><%= @contact.email %></span></div>
      <div class="mt-3 mb-3 border-b border-gray-600"></div>

      <div class="text-lg">件名 : <span><%= @contact.subject %></span></div>
      <div class="mt-3 mb-3 border-b border-gray-600"></div>

      <div class="text-lg">メッセージ :</div>
      <div style="white-space: pre-wrap;"><%= @contact.message %></div>
      <div class="mt-3 mb-3 border-b border-gray-600"></div>

      <div class="flex justify-center mb-2">

        <%= form_with model: @contact, data: { turbo: false } do |f| %>
          <%= f.hidden_field :name %>
          <%= f.hidden_field :email %>
          <%= f.hidden_field :subject %>
          <%= f.hidden_field :message %>
          <%= f.submit '送信', class: "text-lg border-2 border-red-500 rounded-lg text-red-500 shadow-lg hover:bg-red-500 hover:text-white text-center py-1 px-3 hover:border-transparent rounded" %>
        <% end %>

        <%= form_with model: @contact, url: back_contacts_path, data: { turbo: false } do |f| %>
          <%= f.hidden_field :name %>
          <%= f.hidden_field :email %>
          <%= f.hidden_field :subject %>
          <%= f.hidden_field :message %>
          <%= f.submit '入力画面に戻る', class: "text-lg border-2 ml-2 border-slate-500 rounded-lg text-slate-500 shadow-lg hover:bg-slate-500 hover:text-white text-center py-1 px-3 hover:border-transparent rounded"  %>
        <% end %>
      </div>
    </div>
  </div>
</div>
