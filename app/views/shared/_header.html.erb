<header>
  <nav class="px-4 py-2 lg:px-6">
    <div class="flex flex-wrap items-center justify-between max-w-full">

      <div class="flex items-center ml-40"> <!-- フォームを左寄せ -->
        <%= render 'shared/search_form' %>
      </div>

      <div class="flex items-center justify-center flex-grow"> <!-- 中央揃え -->
        <ul class="flex flex-col lg:flex-row lg:space-x-8">
          <li>
            <%= button_to "ランキング", keyboards_ranks_path, method: :get, class: "transition-colors duration-300 hover:bg-slate-500 text-slate-700 hover:text-white py-2 px-3 rounded", "aria-current" => "page" %>
          </li>
          <li>
            <%= button_to "診断", new_diagnosis_path, method: :get, class: "transition-colors duration-300 hover:bg-slate-500 text-slate-700 hover:text-white py-2 px-3 rounded", "aria-current" => "page" %>
          </li>
          <li>
            <%= button_to (t 'defaults.history'), diagnoses_path, method: :get, class: "transition-colors duration-300 hover:bg-slate-500 text-slate-700 hover:text-white py-2 px-3 rounded", "aria-current" => "page" %>
          </li>
          <li>
            <%= button_to "お気に入り", bookmarks_path, method: :get, class: "transition-colors duration-300 hover:bg-slate-500 text-slate-700 hover:text-white py-2 px-3 rounded", "aria-current" => "page" %>
          </li>
          <li>
            <%= render 'shared/my_page_button', "aria-current" => "page" %>
          </li>
        </ul>
      </div>

      <div class="flex items-center justify-end mr-40"> <!-- 右寄せ -->
        <%= link_to (t 'defaults.logout'), logout_path, data: { turbo_method: :delete }, class: "transition-colors duration-300 hover:bg-slate-500 text-slate-700 hover:text-white py-2 px-3 rounded" %>
      </div>

    </div>
  </nav>
</header>
