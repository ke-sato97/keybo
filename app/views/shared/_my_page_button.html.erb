<div class="relative items-center inline-block text-left">
  <!-- dropdown_buttonはjsで使用中。下のdropdownも一緒 -->
  <button class="px-3 py-2 rounded dropdown_button transition-colors duration-300 hover:bg-slate-500 text-slate-700 hover:text-white">
    <%= t('defaults.other') %><i class="fa-solid fa-fw fa-xs fa-angle-down"></i>
  </button>
  <div class="dropdown" style="display: none;">
    <!-- メニューコンテンツ -->
    <ul class="absolute right-0 z-10 w-48 py-2 mt-2 text-sm bg-white rounded-lg shadow text-slate-500 origin-top-right divide-y divide-slate-300">
      <li>
        <%= link_to (t 'defaults.maypage'), profile_path, class: "block px-4 py-2 hover:bg-slate-100 text-slate-700" %>
      </li>
      <li>
        <%= link_to (t 'defaults.top'), root_path, class: "block px-4 py-2 hover:bg-slate-100 text-slate-700" %>
      </li>
      <li>
        <%= link_to (t 'defaults.how_to'), how_to_use_path, class: "block px-4 py-2 hover:bg-slate-100 text-slate-700" %>
      </li>
    </ul>
  </div>
</div>
