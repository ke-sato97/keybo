<header>
  <nav class="bg-white border-gray-200 px-4 lg:px-6 py-2.5 dark:bg-gray-800">
    <div class="flex flex-wrap items-center justify-between mx-auto max-w-screen-xl">

      <%= render 'shared/search_form' %>

      <div class="items-center hidden w-full lg:flex lg:w-auto" id="mobile-menu-2">
        <ul class="flex flex-col mt-4 font-medium lg:flex-row lg:space-x-8 lg:mt-0">
          <li>
            <%= link_to (t 'defaults.top'), root_path, class: "text-lg block py-2 pr-4 pl-3 hover:text-slate-200 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-gray-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700", "aria-current" => "page" %>
          </li>
          <li>
            <%= link_to '使用方法', how_to_use_path, class: "text-lg block py-2 pr-4 pl-3 hover:text-slate-200 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-gray-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700", "aria-current" => "page" %>
          </li>
        </ul>
      </div>

      <div class="flex items-center lg:order-2 space-x-4"> <!-- space-x-4 を追加 -->
        <%= button_to t('defaults.login'), login_path, method: :get, class: "bg-transparent hover:bg-slate-500 text-slate-700 hover:text-white py-2 px-4 hover:border-transparent rounded" %>
        <%= button_to t('defaults.register'), new_user_path, method: :get, class: "bg-transparent hover:bg-slate-500 text-slate-700 hover:text-white py-2 px-4 hover:border-transparent rounded" %>
      </div>
    </div>
  </nav>
</header>
