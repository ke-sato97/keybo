<header>
  <nav class="px-4 py-2 lg:px-6">
    <div class="flex flex-wrap items-center justify-between max-w-full">

      <div class="flex items-center ml-40"> <!-- フォームを左寄せ -->
        <%= render 'shared/search_form' %>
      </div>

      <div class="flex items-center justify-center flex-grow"> <!-- 中央揃え -->
        <ul class="flex flex-col lg:flex-row lg:space-x-8">
          <li>
            <%= button_to (t 'defaults.top'), root_path, method: :get, class: "bg-transparent hover:bg-slate-500 text-slate-700 hover:text-white py-2 px-4 transition-colors duration-300 rounded" %>
          </li>
          <li>
            <%= button_to '使用方法', how_to_use_path, method: :get, class: "bg-transparent hover:bg-slate-500 text-slate-700 hover:text-white py-2 px-4 transition-colors duration-300 rounded" %>
          </li>
          <li>
            <%= button_to "ランキング", keyboards_ranks_path, method: :get, class: "transition-colors duration-300 hover:bg-slate-500 text-slate-700 hover:text-white py-2 px-3 rounded", "aria-current" => "page" %>
          </li>
        </ul>
      </div>

      <div class="flex items-center justify-end mr-40"> <!-- 右寄せ -->
        <%= button_to t('defaults.login'), login_path, method: :get, class: "bg-transparent hover:bg-slate-500 text-slate-700 hover:text-white py-2 px-4 transition-colors duration-300 rounded" %>
        <%= button_to t('defaults.register'), new_user_path, method: :get, class: "bg-transparent hover:bg-slate-500 text-slate-700 hover:text-white ml-2 py-2 px-4 transition-colors duration-300 rounded" %>
      </div>

    </div>
  </nav>
</header>
