<!-- app/views/profiles/show.html.erb -->
<div class='relative overflow-scroll top-wrapper'>
  <div class="pt-8 pb-8">
    <div class="p-6 mx-auto bg-white rounded-lg shadow-lg max-w-screen-md">
      <div class="flex justify-center mb-4 text-4xl font-bold text-slate-600">
        マイページ
      </div>

      <div class="text-center text-gray-700">
        <div class="flex justify-center w-full px-2 py-4 rounded-lg shadow-lg mb-7">
          <% if @user.image.attached? %>
            <%= image_tag @user.image.variant(resize: '200'), class: "rounded-lg" %>
          <% else %>
            <%= image_tag 'noimage', size: '200' %>
          <% end %>
        </div>
        <%= link_to '画像を変更', image_processing_profile_path, class:"rounded mr-2 shadow-lg text-lg text-white bg-red-500 ml-2 hover:bg-red-600 px-4 py-2" %>

        <div class="w-full px-2 py-4 rounded-lg shadow-lg mb-7">
          <div class="justify-center text-2xl text-red-500">名前</div>
          <div class="justify-center text-2xl"><%= @user.name %></div>
        </div>

        <div class="w-full px-2 py-4 rounded-lg shadow-lg mb-7">
          <div class="justify-center text-2xl text-red-500">メールアドレス</div>
          <div class="justify-center text-2xl"><%= @user.email %></div>
        </div>
      </div>

      <div class="flex justify-center mb-2">
        <%= link_to '編集', edit_profile_path, class:"rounded mr-2 shadow-lg text-lg text-white bg-red-500 ml-2 hover:bg-red-600 px-4 py-2" %>
      </div>
    </div>
  </div>
</div>
