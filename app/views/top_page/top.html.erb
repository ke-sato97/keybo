<div class='top-wrapper'>
  <div class="flex flex-col items-center justify-center bg-cover overflow-hidden bg-center h-[calc(100vh-134px)]">
    <% if logged_in? %>
      <%= button_to 'キーボード診断', new_diagnosis_path, method: :get, class: "w-96 bg-transparent hover:bg-slate-500 bg-white shadow-lg text-slate-700 font-semibold hover:text-white text-4xl py-12 px-16 hover:border-transparent rounded-lg mb-8" %>
    <% else %>
        <%= button_to t('defaults.login'), login_path, method: :get, class: "mb-10 w-96 bg-transparent hover:bg-slate-500 bg-white shadow-lg text-slate-700 font-semibold hover:text-white py-8 px-12 text-4xl hover:border-transparent rounded-lg" %>
        <%= button_to 'ゲストログイン', guest_login_path, method: :post, class: "mb-10 w-96 bg-transparent hover:bg-slate-500 bg-white shadow-lg text-slate-700 font-semibold hover:text-white py-8 px-12 text-4xl hover:border-transparent rounded-lg" %>
        <%= button_to '使用方法', how_to_use_path, method: :get, class: "bg-transparent w-96 hover:bg-slate-500 bg-white shadow-lg text-slate-700 font-semibold hover:text-white py-8 px-12 text-4xl hover:border-transparent rounded-lg mb-8" %>
    <% end %>
  </div>
</div>
