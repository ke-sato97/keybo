<% @keyboards.each do |keyboard| %>
  <div class="p-4 border rounded-md">
    <div class="relative text-gray-700 bg-white shadow-md w-96 rounded-xl bg-clip-border">
        <div class="relative flex items-center justify-center mx-4 mt-4 overflow-hidden text-gray-700 bg-white shadow-lg h-80 rounded-xl bg-clip-border">
          <%= image_tag keyboard.medium_image_urls.first, size: '250' %>
        </div>
          <div class="p-6 text-center w-96 h-96">
            <h3 class="block mb-2 font-sans text-2xl antialiased font-semibold leading-snug tracking-normal text-blue-gray-900">
              <%= keyboard.name %>
            </h3>
        </div>
    </div>
  </div>
<% end %>
