<div class="pt-6 pb-6 mx-auto max-w-screen-xl">
  <div class="flex justify-center max-w-screen-xl">

  <div class="w-1/4 px-3 py-4 bg-white">
    <div class="text-2xl font-semibold text-center text-orange-400 text-bold">
      <i class="fa-regular fa-fw fa-chess-king" style="color:orange:400;"></i>ランキング<i class="fa-regular fa-fw fa-chess-king" style="color:orange:400;"></i>
    </div>
    <ul class="py-5 text-lg font-medium space-y-2">
      <li>
        <%= link_to 'javascript:void(0);', class: "flex hover:bg-slate-100 border items-center p-2 rounded-lg text-slate-700 switch-ranking", "data-target": "#diagnosisRanks" do %>
          <i class="fa-solid fa-wand-magic-sparkles"></i><span class="flex-1 ms-3 whitespace-nowrap">診断結果表示回数</span>
        <% end %>
      </li>
      <li>
        <%= link_to 'javascript:void(0);', class: "flex hover:bg-slate-100 border border-slate-200 items-center p-2 rounded-lg text-slate-700 switch-ranking", "data-target": "#bookmarkRanks" do %>
          <i class="fa-regular fa-heart"></i><span class="flex-1 ms-3 whitespace-nowrap">お気に入り登録数</span>
        <% end %>
      </li>
      <li>
        <%= link_to 'javascript:void(0);', class: "flex hover:bg-slate-100 border items-center p-2 rounded-lg text-slate-700 switch-ranking", "data-target": "#commentRanks" do %>
          <i class="fa-regular fa-comment"></i><span class="flex-1 ms-3 whitespace-nowrap">コメント数</span>
        <% end %>
      </li>
    </ul>
  </div>

  <!-- blindはranks.jsで使うため注意 -->
  <div class="w-3/4 ml-4 bg-white">
    <div class="text-center blind" id="diagnosisRanks">
      <h1 class="pt-6 pb-2 text-4xl font-bold text-center text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-violet-500">診断結果表示回数</h1>
      <div class="flex justify-center">
        <div class="grid grid-cols-1" id="each_ranks">
          <%= render 'keyboards/ranks_keyboard', keyboards: @diagnosis_ranks %>
        </div>
      </div>
    </div>

    <div class="text-center blind" id="bookmarkRanks">
      <h1 class="pt-6 pb-2 text-4xl font-bold text-center text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-violet-500">お気に入り登録数</h1>
      <div class="flex justify-center">
        <div class="grid grid-cols-1">
          <%= render 'keyboards/ranks_keyboard', keyboards: @bookmark_ranks %>
        </div>
      </div>
    </div>

    <div class="text-center blind" id="commentRanks">
      <h1 class="pt-6 pb-2 text-4xl font-bold text-center text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-violet-500">コメント数</h1>
      <div class="flex justify-center">
        <div class="grid grid-cols-1" id="each_ranks">
          <%= render 'keyboards/ranks_keyboard', keyboards: @comment_ranks %>
        </div>
      </div>
    </div>
  </div>
</div>
