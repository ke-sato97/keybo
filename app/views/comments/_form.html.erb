    <%= f.text_area :body, id: 'js-new-comment-body', class: "bg-slate-100 rounded-lg", rows: 5, cols: 50 %>
    <br>
    <%= f.submit "送信", class:'border border-gray-100 rounded-lg shadow-lg mb-7 bg-red-500 font-bold hover:bg-red-600 text-white hover:text-white text-center py-2 px-4 hover:border-transparent rounded' %>
  <% end %>
<% end %>
