<tr id="comment-<%= comment.id %>">
  <td style="width: 60px">
    <% if comment.user.image.attached? %>
      <%= image_tag comment.user.image.variant(resize: '50'), class: "rounded-lg" %>
    <% else %>
      <%= image_tag 'noimage.png', size: '50' %>
    <% end %>
  </td>
  </td>
  <td>
    <h3 class="text-md"><%= comment.user.name %></h3>
    <div class="text-xl">
      <div id="js-comment-<%= comment.id %>">
        <%= simple_format(comment.body) %>
      </div>
    </div>
    <div id="js-p-2 p-2 texmment-box-<%= comment.id %>" style="display: none;">
      <textarea id="js-textarea-comment-<%= comment.id %>" class="mb-1 form-control"><%= comment.body %></textarea>
      <button class="btn btn-light js-button-edit-comment-cancel" data-comment-id="<%= comment.id %>">キャンセル</button>
      <button class="btn btn-success js-button-comment-update" data-comment-id="<%= comment.id %>">更新</button>
    </div>
  </td>
    <div id="js-textarea-comment-box-<%= comment.id %>" style="display: none;">
      <button class="btn btn-light js-button-edit-comment-cancel" data-comment-id="<%= comment.id %>">キャンセル</button>
      <button class="btn btn-success js-button-comment-update" data-comment-id="<%= comment.id %>">更新</button>
    </div>
  </td>

  <% if current_user.own?(comment) %>
    <td class="flex justify-between action">
      <ul class="flex items-center space-x-2">
        <li class="list-inline-item">
          <a href="#" class='js-edit-comment-button' data-comment-id="<%= comment.id %>">
            <i class="fa-solid fa-pen" style="color:slate;"></i>
          </a>
        </li>
        <li class="list-inline-item">
          <a href="#" class='js-delete-comment-button' data-comment-id="<%= comment.id %>">
            <i class="fa-solid fa-trash" style="color:slate;"></i>
          </a>
        </li>
      </ul>
    </td>
  <% end %>
</tr>
