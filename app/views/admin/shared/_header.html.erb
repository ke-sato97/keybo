<header>
  <nav class="bg-white border-gray-200 px-4 lg:px-6 py-2.5 dark:bg-gray-800">
    <div class="flex flex-wrap items-center justify-between mx-auto max-w-screen-xl">
      <%= form_with url: keyboards_path, method: :get, remote: true do |f| %>
        <div class="flex items-center justify-center ">
          <div class="flex border-2 border-gray-200 rounded">
            <%= f.text_field :search, id: "keyboard_search",class: "px-4 py-2 w-80", autocomplete: 'off', placeholder: "Search keyboards" %>
            <button type="submit" class="px-4 text-white bg-gray-600 hover:bg-slate-500 ">検索</button>
          </div>
        </div>
        <div id="keyboard_results"></div>
      <% end %>

      <div class="items-center hidden w-full lg:flex lg:w-auto" id="mobile-menu-2">
        <ul class="flex flex-col mt-4 font-medium lg:flex-row lg:space-x-8 lg:mt-0">
          <li>
            <%= link_to "インデックス", "#", class: "block py-2 pr-4 pl-3 hover:text-gray-200 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-gray-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700" %>
          </li>
          <li>
            <%= link_to "データ取得", admin_keyboards_search_path, class: "block py-2 pr-4 pl-3 hover:text-gray-200 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-gray-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700", "aria-current" => "page" %>
          </li>
        </ul>
      </div>
      <%= link_to (t 'defaults.logout'), logout_path, data: { turbo_method: :delete }, class: "bg-transparent hover:bg-slate-500 text-slate-700 hover:text-white py-2 px-4 hover:border-transparent rounded" %>

    </div>
  </nav>
</header>
