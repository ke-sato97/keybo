<header>
  <nav class="px-4 lg:px-6 py-2.5">
    <div class="flex flex-wrap items-center justify-between mx-auto max-w-screen-xl">
      <div class="items-center hidden w-full lg:flex lg:w-auto" id="mobile-menu-2">
        <ul class="flex flex-col mt-4 font-medium lg:flex-row lg:space-x-8 lg:mt-0">
          <li>
            <%= button_to "トップページ", root_path, method: :get, class: "block py-2 pr-4 pl-3 hover:text-gray-200 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-gray-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700" %>
          </li>
          <li>
            <%= button_to "インデックス", admin_keyboards_path, method: :get, class: "block py-2 pr-4 pl-3 hover:text-gray-200 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-gray-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700" %>
          </li>
          <li>
            <%= button_to "すべての一覧", keyboards_path, method: :get, class: "block py-2 pr-4 pl-3 hover:text-gray-200 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-gray-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700" %>
          </li>
            <%= button_to "データ取得", admin_keyboards_search_path, method: :get, class: "block py-2 pr-4 pl-3 hover:text-gray-200 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-gray-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700", "aria-current" => "page" %>
          </li>
        </ul>
      </div>
      <%= button_to (t 'defaults.logout'), admin_logout_path, data: { turbo_method: :delete }, class: "bg-transparent hover:bg-slate-500 text-slate-700 hover:text-white py-2 px-4 hover:border-transparent rounded" %>

    </div>
  </nav>
</header>
