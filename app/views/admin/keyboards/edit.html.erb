<div class="flex justify-center mb-7 image-gallery gap-4">
  <% @keyboard.medium_image_urls.each do |image| %>
    <%= image_tag image, class: "w-64 h-64 object-cover" %>
  <% end %>
</div>

<%= form_with model: @keyboard, url: admin_keyboard_path(@keyboard), local: true do |f| %>
  <div class="flex flex-col">
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.label :os %>
    <%= f.text_field :os %>

    <%= f.label :connect %>
    <%= f.text_field :connect %>

    <%= f.label :size %>
    <%= f.text_field :size %>

    <%= f.label :layout %>
    <%= f.text_field :layout %>

    <%= f.label :switch %>
    <%= f.text_field :switch %>
  </div>

  <div class="flex flex-wrap -mx-2">
    <% Tag.all.each do |tag| %>
      <div class="w-1/4 px-2">
        <label class="block">
          <%= check_box_tag 'keyboard[tag_ids][]', tag.id, @keyboard.tag_ids.include?(tag.id), class: 'mr-1' %>
          <%= tag.name %>
        </label>
      </div>
    <% end %>
  </div>

  <%= f.submit '更新', class: "m-2 text-lg border-2 rounded-lg flex item-center transition-colors duration-300 hover:bg-red-900 hover:text-white py-2 px-3 rounded" %>
<% end %>

<% @tags.each do |tag| %>
  <%= tag.name %>
<% end %>
<br>
<div class="text-sm">
  <p class="mt-4"><%= link_to '楽天市場に移動', @keyboard.url, method: :get, target: :_blank, rel: "noopener noreferrer", class: "transition-colors duration-500 border-2 border-red-500 rounded-lg text-red-500 shadow-lg mb-7 font-bold hover:bg-red-500 text-2xl hover:text-white text-center py-3 px-4 hover:border-transparent rounded" %></p>
  <p class="mt-4"><%= @keyboard.caption %></p>
</div>
<br>
<%= link_to 'DELETE', admin_keyboard_path(@keyboard), data: { turbo_method: :delete }, class: "border-2 rounded-lg text-lg flex justify-center transition-colors duration-300 hover:bg-red-900 hover:text-white py-2 px-3 rounded" %>
