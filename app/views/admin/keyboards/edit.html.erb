<div class="flex justify-center mb-7 image-gallery gap-4">
  <% @keyboard.medium_image_urls.each do |image| %>
    <%= image_tag image, class: "w-64 h-64 object-cover" %>
  <% end %>
</div>
<%= form_with model: @keyboard, url: admin_keyboard_path(@keyboard), local: true do |f| %>
  <div class="flex flex-col w-full">
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.label :os %>
    <%= f.text_field :os %>

    <%= f.label :size %>
    <%= f.text_field :size %>

    <%= f.label :layout %>
    <%= f.text_field :layout %>

    <%= f.label :switch %>
    <%= f.text_field :switch %>

    <%= f.label :url %>
    <%= f.text_field :url %>

    <%= f.label :caption %>
    <%= f.text_field :caption %>

    <%= f.submit '更新' %>
  </div>
<% end %>
<%= form_with model: @tag, url: admin_keyboard_path(@keyboard), local: true do |f| %>
  <div class="flex flex-col w-full">
    <%= f.label :tag %>
    <%= f.text_field :tag %>
    <%= f.submit '更新' %>
  </div>
<% end %>
<%= link_to 'DELETE', admin_keyboard_path(@keyboard), data: { turbo_method: :delete, confirm: "投稿を削除します。よろしいですか？" } %>
<br>
<div class="text-lg">
  <%= @keyboard.caption %>
</div>

