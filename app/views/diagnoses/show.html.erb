<!-- app/views/diagnoses/:id -->
<% content_for(:title, t('.title')) %>
<div class='relative overflow-scroll top-wrapper'>
  <div class="absolute relative flex items-center justify-center pt-6 pb-6 backdrop-blur-md">
    <div class="px-6 py-3 bg-white rounded-lg max-w-screen-lg">
      <h1 class="text-4xl font-bold text-center"><%= (t '.title') %></h1>
      <br>
      <div class="text-center text-gray-700">
        <h2 class="text-2xl font-bold mb-7"><%= @selected_keyboard.name %></h2>
        <div class="flex justify-center mb-7 image-gallery gap-4">
          <% @selected_keyboard.medium_image_urls.each do |image| %>
            <%= image_tag image, class: "w-64 h-64 object-cover" %>
          <% end %>
        </div>
        <div class="w-full px-2 py-4 border border-gray-100 rounded-lg shadow-lg mb-7">
          <h3 class="mb-2 text-4xl font-bold"><span class="text-red-500"><%= (t '.price') %> </span><%= @selected_keyboard.price.to_fs(:delimited) %><%= (t '.yen') %></h3>
        </div>
        <div class="w-full px-2 py-4 rounded-lg shadow-lg mb-7">
          <h3 class="mb-2 text-2xl font-bold text-red-500"><%= (t '.os') %></h3>
          <h3 class="mb-2 text-2xl font-bold">
            <% @selected_keyboard.os.each do |os| %>
              <%= os %>
            <% end %>
          </h3>
        </div>
        <div class="w-full px-2 py-4 rounded-lg shadow-lg mb-7">
          <h3 class="mb-2 text-2xl font-bold text-red-500"><%= (t '.connect') %></h3>
          <h3 class="mb-2 text-2xl font-bold">
            <% @selected_keyboard.connect.each do |connect| %>
              <%= connect %>
            <% end %>
          </h3>
        </div>

        <div class="flex justify-between mb-5">
        <div class="w-full px-2 py-4 rounded-lg shadow-lg">
          <h3 class="mb-2 text-2xl font-bold"><%= @selected_keyboard.size %></h3>
        </div>
          <div class="w-full px-2 py-4 rounded-lg shadow-lg">
            <h3 class="mb-2 text-2xl font-bold"><%= @selected_keyboard.layout %></h3>
          </div>
          <div class="w-full px-2 py-4 rounded-lg shadow-lg">
            <h3 class="mb-2 text-2xl font-bold"><%= @selected_keyboard.switch %><%= (t '.switch') %></h3>
          </div>
        </div>
        <br>

        <div class="mb-2">
          <%= link_to t('.again'), new_diagnosis_path, class: "text-lg border-2 border-slate-500 rounded text-slate-500 shadow-lg hover:bg-slate-500 hover:text-white text-center py-2 px-4 hover:border-transparent rounded" %>
          <%= link_to t('.caption'), keyboard_path(@selected_keyboard), class: "text-white bg-slate-500 hover:bg-slate-600 shadow-lg px-4 py-2 border border-slate-500 text-lg hover:border-transparent rounded" %>
        </div>
      </div>
    </div>
  </div>
</div>
