<h1 class="mt-4 text-4xl font-bold">過去の診断結果</h1>
<div class="mt-4">
  <!-- ページネーション -->
  <%= paginate @keyboards %>
    <!-- 掲示板 -->
    <% if @diagnoses.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 4xl:grid-cols-6">
        <%= render 'keyboards/keyboard', keyboards: @diagnoses %>
      </div>
    <% else %>
      <div class="flex flex-col h-screen">
        <p class="mt-4 text-xl">診断結果はありません</p>
      </div>
    <% end %>
  <!-- ページネーション -->
  <%= paginate @keyboards %>
</div>
