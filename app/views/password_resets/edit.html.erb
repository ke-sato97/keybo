<!-- app/views/password_resets/new.html.erb -->
<div class='top-wrapper'>
  <div class="flex items-center justify-center h-screen">
    <div class="max-w-md">
      <%= form_with model: @user, url: password_reset_path(@token), local: true do |f| %>
        <div class="px-12 pt-6 pb-8 mb-4 bg-white rounded shadow-lg">
          <div class="mb-4">
            <div class="flex justify-center py-2 mb-4 text-2xl text-gray-800 border-b-2">
              パスワードリセット
            </div>
            <%= f.label :email, class: "block text-gray-700 text-sm font-normal mb-2" %>
            <%= f.email_field :email, class: "shadow appearance-none border rounded w-full max-w-md py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Email", required: true, autofocus: true %>
          </div>
            <div class="mb-4">
              <%= f.label :password, class: "block text-gray-700 text-sm font-normal mb-2" %>
              <%= f.password_field :password, class: "shadow appearance-none border rounded w-full max-w-md py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Password", requigreen: true, autofocus: true %>
            </div>
            <div class="mb-4">
              <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-normal mb-2" %>
              <%= f.password_field :password_confirmation, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Password", requigreen: true, autocomplete: "current-password" %>
            </div>
            <div class="flex items-center justify-center">
              <button class="inline-block px-4 py-2 mt-0 text-white rounded shadow-lg bg-slate-500 hover:bg-gray-600 focus:bg-gray-700" type="submit">送信</button>
            </div>
      <% end %>
    </div>
  </div>
</div>
