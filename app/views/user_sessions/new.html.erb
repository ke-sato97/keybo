<div class="container mx-auto">
  <div class="flex flex-col items-center">
    <div class="w-full md:w-10/12 lg:w-8/12 p-4">
      <h1 class="text-3xl font-bold mb-4">ログイン</h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "block font-semibold" %>
          <%= f.text_field :email, class: "w-full px-3 py-2 border rounded" %>
        </div>
        <div class="mb-4">
          <%= f.label :password, class: "block font-semibold" %>
          <%= f.password_field :password, class: "w-full px-3 py-2 border rounded" %>
        </div>
        <div class="actions">
          <%= f.submit "Login", class: "w-full px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
        </div>
      <% end %>
      <div class='text-center mt-4'>
        <%= link_to '登録ページへ', new_user_path, class: "text-blue-500 hover:underline" %>
      </div>
    </div>
  </div>
</div>
