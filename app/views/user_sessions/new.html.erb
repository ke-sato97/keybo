<div class='login-wrapper'>
  <div class="flex items-center justify-center h-screen">
    <div class="flex items-center justify-center shadow">
      <div class="max-w-md">
        <%= form_with model: @user, local: true do |f| %>
          <div class="px-12 pt-6 pb-8 mb-4 bg-white rounded shadow-lg">
            <div class="flex justify-center py-2 mb-4 text-2xl text-gray-800 border-b-2">
              <%= t('.title') %>
            </div>
            <div class="mb-4">
              <%= f.label :email, User.human_attribute_name(:email), class: "block text-gray-700 text-sm font-normal mb-2" %>
              <%= f.email_field :email, class: "shadow appearance-none border rounded w-full max-w-md py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Email", required: true, autofocus: true %>
            </div>
            <div class="mb-6">
              <%= f.label :password, User.human_attribute_name(:password), class: "block text-gray-700 text-sm font-normal mb-2" %>
              <%= f.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-0 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Password", required: true, autocomplete: "current-password" %>
            </div>
            <div class="flex flex-col items-center justify-center">
              <button class="inline-block px-4 py-2 mt-0 text-white rounded shadow-lg bg-slate-500 hover:bg-gray-600 focus:bg-gray-700" type="submit"><%= (t '.title') %></button>
              <a class="inline-block mt-2 text-sm font-normal text-blue-500 align-baseline hover:text-blue-800" href="#">
                <%= (t '.password_forget') %>
              </a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
