<div class="container mx-auto">
  <div class="flex justify-center">
    <div class="w-full md:w-10/12 lg:w-8/12 p-4">
      <h1 class="text-3xl font-bold mb-4">New User</h1>
      <%= form_with model: @user, local: true do |f| %>
        <div class="mb-4">
          <%= f.label :name, class: "block font-semibold" %>
          <%= f.text_field :name, class: "w-full px-3 py-2 border rounded" %>
        </div>
        <div class="mb-4">
          <%= f.label :email, class: "block font-semibold" %>
          <%= f.email_field :email, class: "w-full px-3 py-2 border rounded" %>
        </div>
        <div class="mb-4">
          <%= f.label :password, class: "block font-semibold" %>
          <%= f.password_field :password, class: "w-full px-3 py-2 border rounded" %>
        </div>
        <div class="mb-4">
          <%= f.label :password_confirmation, class: "block font-semibold" %>
          <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border rounded" %>
        </div>
        <%= f.submit 'Create User', class: 'w-full px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600' %>
      <% end %>
      <div class='text-center'>
        <%= link_to 'login', login_path, class: 'text-blue-500 underline' %>
      </div>
    </div>
  </div>
</div>
