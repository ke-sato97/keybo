<div class="flex items-center justify-center">
  <div class="max-w-md">
    <%= form_with model: @user, local: true do |f| %>
      <div class="bg-white shadow-lg rounded px-12 pt-6 pb-8 mb-4">
        <div class="text-gray-800 text-2xl flex justify-center border-b-2 py-2 mb-4">
          <%= t('.title') %>
        </div>
        <div class="mb-4">
          <%= f.label :name, User.human_attribute_name(:name), class: "block text-gray-700 text-sm font-normal mb-2" %>
          <%= f.text_field :name, class: "shadow appearance-none border rounded w-full max-w-md py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Name", requigreen: true, autofocus: true %>
        </div>
        <div class="mb-4">
          <%= f.label :email, User.human_attribute_name(:email), class: "block text-gray-700 text-sm font-normal mb-2" %>
          <%= f.email_field :email, class: "shadow appearance-none border rounded w-full max-w-md py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Email", requigreen: true, autofocus: true %>
        </div>
        <div class="mb-4">
          <%= f.label :password, User.human_attribute_name(:password), class: "block text-gray-700 text-sm font-normal mb-2" %>
          <%= f.password_field :password, class: "shadow appearance-none border rounded w-full max-w-md py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Password", requigreen: true, autofocus: true %>
        </div>
        <div class="mb-4">
          <%= f.label :password_confirmation, User.human_attribute_name(:password_confirmation), class: "block text-gray-700 text-sm font-normal mb-2" %>
          <%= f.password_field :password_confirmation, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Password", requigreen: true, autocomplete: "current-password" %>
        </div>
        <div class="flex items-center justify-center">
          <button class="px-4 py-2 rounded text-white inline-block shadow-lg bg-green-500 hover:bg-green-600 focus:bg-green-700" type="submit"><%= (t '.title') %></button>
        </div>
      </div>
    <% end %>
  </div>
</div>
